# Zotero API credentials
ZOTERO_ID=your_zotero_user_id
ZOTERO_KEY=your_zotero_api_key

# OpenAI API configuration (optional, for using OpenAI models)
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1  # Optional: custom API base URL
OPENAI_MODEL=gpt-3.5-turbo  # Optional: model name

# Local LLM configuration (optional, for using local models)
LOCAL_LLM_PATH=/path/to/your/model.gguf  # Path to your local model file
LOCAL_LLM_MODEL=llama2  # Model name for local inference

# Email configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password  # For Gmail, use App Password

# Cache configuration
CACHE_DIR=.cache
ZOTERO_CACHE_EXPIRY_DAYS=7  # Number of days before Zotero cache expires

# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ArXiv query configuration
ARXIV_QUERY=cat:cs.CV OR cat:cs.AI OR cat:cs.LG OR cat:cs.CL OR cat:cs.NE OR cat:stat.ML  # Default query for computer science papers
MAX_PAPER_NUM=10  # Maximum number of papers to process 